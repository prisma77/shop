<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multi.shop.mapper.CartMapper">

    <resultMap id="cartItemMap" type="com.multi.shop.domain.CartItem">
        <id property="id" column="id"/>
        <result property="sessionId" column="session_id"/>
        <result property="productId" column="product_id"/>
        <result property="quantity" column="quantity"/>
        <result property="unitPrice" column="unit_price"/>
    </resultMap>

    <resultMap id="cartItemViewMap" type="com.multi.shop.domain.CartItemView">
        <id property="id" column="id"/>
        <result property="sessionId" column="session_id"/>
        <result property="productId" column="product_id"/>
        <result property="quantity" column="quantity"/>
        <result property="unitPrice" column="unit_price"/>
        <result property="productName" column="name"/>
        <result property="productPrice" column="price"/>
        <result property="description" column="description"/>
    </resultMap>

    <select id="findBySession" resultMap="cartItemViewMap">
        SELECT c.id, c.session_id, c.product_id, c.quantity, c.unit_price,
        p.name, p.price, p.description
        FROM cart c
        JOIN product p ON p.id = c.product_id
        WHERE c.session_id = #{sessionId}
        ORDER BY c.id DESC
    </select>

    <select id="findOneBySessionAndProduct" resultMap="cartItemMap">
        SELECT id, session_id, product_id, quantity, unit_price
        FROM cart
        WHERE session_id = #{sessionId}
        AND product_id = #{productId}
        LIMIT 1
    </select>

    <insert id="insert" parameterType="com.multi.shop.domain.CartItem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO cart (session_id, product_id, quantity, unit_price)
        VALUES (#{sessionId}, #{productId}, #{quantity}, #{unitPrice})
    </insert>

    <update id="updateQuantity">
        UPDATE cart
        SET quantity = #{quantity}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM cart WHERE id = #{id}
    </delete>

    <delete id="deleteBySession">
        DELETE FROM cart WHERE session_id = #{sessionId}
    </delete>

</mapper>

